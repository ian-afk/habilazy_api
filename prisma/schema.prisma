generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String

  tasks    Task[]
  subTasks SubTask[]
}

model Task {
  id          Int       @id @default(autoincrement())
  task        String    @unique
  description String
  userId      Int
  users       User      @relation(fields: [userId], references: [id])
  subTasks    SubTask[]
}

model SubTask {
  id          Int     @id @default(autoincrement())
  task        String  @unique
  description String?
  taskId      Int
  tasks       Task    @relation(fields: [taskId], references: [id])
  userId      Int
  users       User    @relation(fields: [userId], references: [id])
}
